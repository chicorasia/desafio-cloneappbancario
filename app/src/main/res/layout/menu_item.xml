<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="4dp"
    app:cardCornerRadius="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_constraintlayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/card_icone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/laranjaMedio"
            android:src="@drawable/ic_baseline_credit_card_24"
            app:layout_constraintStart_toStartOf="@id/card_titulo"
            app:layout_constraintBottom_toTopOf="@id/card_titulo"/>

        <TextView
            android:id="@+id/card_titulo"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="bold"
            android:text="@string/titulo_do_item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>